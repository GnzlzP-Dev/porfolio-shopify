---
import MainLayout from "../layouts/MainLayout.astro";

interface Props {
  error: unknown;
}

const { error } = Astro.props;

const title = "Error interno del servidor | Especialista Shopify";
const description =
  "Lo sentimos, ha ocurrido un error interno en el servidor. Por favor, inténtalo de nuevo más tarde.";
---

<MainLayout title={title} description={description}>
  <div>
    <section class="max-w-5xl mx-auto px-4 py-8 text-center">
      <span class="text-4xl font-bold text-center mt-20">
        {error instanceof Error ? error.message : "Error desconocido"}</span
      >
    </section>
  </div>
</MainLayout>
